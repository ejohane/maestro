#!/bin/sh

echo "Running pre-push checks..."
echo ""

# Run typecheck
echo "=> Type checking..."
bun run typecheck
if [ $? -ne 0 ]; then
  echo ""
  echo "Type check failed. Push aborted."
  exit 1
fi

# Run lint
echo ""
echo "=> Linting..."
bun run lint
if [ $? -ne 0 ]; then
  echo ""
  echo "Lint failed. Push aborted."
  exit 1
fi

# Run tests
echo ""
echo "=> Running tests..."
bun run test
if [ $? -ne 0 ]; then
  echo ""
  echo "Tests failed. Push aborted."
  exit 1
fi

echo ""
echo "All checks passed! Pushing..."
